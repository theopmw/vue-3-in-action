{
  "vscode_custom_css.imports": [
    "file:///Users/theowright/.vscode/style.css" // for mac (remove if not mac)
  ],
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.folding": true,
  "editor.minimap.enabled": false,
  "editor.mouseWheelScrollSensitivity": 1,
  "editor.fastScrollSensitivity": 1,
  "editor.smoothScrolling": true,
  // "editor.cursorBlinking": "solid",
  // "editor.fontFamily": "CaskaydiaMono Nerd Font Mono",
  // "editor.fontFamily": "Fira Code, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontFamily": "Monaspace Neon Var",
  // "editor.fontLigatures": true,
  "editor.fontLigatures": "'calt', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'ss09', 'liga'",
  "editor.guides.bracketPairs": "active",
  "editor.lineHeight": 1.5,
  "editor.fontWeight": "normal",
  "editor.guides.indentation": true,
  "editor.guides.highlightActiveIndentation": true,
  "editor.wordWrapColumn": 50,
  "editor.wordWrap": "on",
  "editor.renderControlCharacters": false,
  "editor.accessibilitySupport": "off",
  "workbench.hover.delay": 500,
  "workbench.sash.hoverDelay": 500,
  "workbench.statusBar.visible": true,
  "workbench.startupEditor": "none",
  "workbench.layoutControl.enabled": true,
  "editor.scrollbar.scrollByPage": true
}
